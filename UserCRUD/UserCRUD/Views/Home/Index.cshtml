@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/styles/StyleSheet1.css" rel="stylesheet" />

<main>
    <section class="intro-section text-center" aria-labelledby="introTitle">
        <h1 id="introTitle" class="display-4">Welcome to UserCrud</h1>
        <p class="lead">A simple and powerful web application to manage users with ASP.NET MVC</p>
        <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-lg btn-animated">View All Users <i class="fas fa-users"></i></a>
    </section>

    <div class="my-5 container">
        <div class="row">
            <section class="col-md-4 mb-4 fadeInUp" aria-labelledby="userIndexTitle">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 id="userIndexTitle" class="card-title">Manage Users</h2>
                        <p class="card-text">Easily view, edit, or delete existing users in the system. All your user data in one place.</p>
                        <a href="@Url.Action("Index", "User")" class="btn btn-info btn-lg">
                            <i class="fas fa-list"></i> View All Users
                        </a>
                    </div>
                </div>
            </section>

            <section class="col-md-4 mb-4 fadeInUp" aria-labelledby="createUserTitle">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 id="createUserTitle" class="card-title">Create New User</h2>
                        <p class="card-text">Add new users to the system with just a few clicks. It's easy and intuitive.</p>
                        <a href="@Url.Action("Create", "User")" class="btn btn-success btn-lg">
                            <i class="fas fa-user-plus"></i> Add User
                        </a>
                    </div>
                </div>
            </section>

            <section class="col-md-4 mb-4 fadeInUp" aria-labelledby="featuresTitle">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 id="featuresTitle" class="card-title">Powerful Features</h2>
                        <p class="card-text">Built with ASP.NET MVC, offering full CRUD operations for users and a responsive design.</p>
                        <a href="https://go.microsoft.com/fwlink/?LinkId=301865" target="_blank" class="btn btn-warning btn-lg">
                            <i class="fas fa-cogs"></i> Explore Features
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Additional Section for Feedback -->
    <section class="feedback-section my-5 text-center" aria-labelledby="feedbackTitle">
        <h2 id="feedbackTitle">We value your feedback!</h2>
        <p>Share your thoughts and let us know how we can improve the UserCrud application. Your opinion matters!</p>
        <a href="mailto:support@usercrud.com" class="btn btn-danger btn-lg">
            <i class="fas fa-comments"></i> Contact Us
        </a>
    </section>
</main>



